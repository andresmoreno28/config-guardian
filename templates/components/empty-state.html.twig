<div class="{{ classes }}" role="status" aria-label="{{ title }}">
  <div class="cg-empty-state__icon cg-animate-fadeIn">
    {{ icons[icon_type]|default(icons['empty'])|raw }}
  </div>

  <h3 class="cg-empty-state__title cg-animate-fadeInUp">
    {{ title }}
  </h3>

  {% if message %}
    <p class="cg-empty-state__message cg-animate-fadeInUp cg-delay-1">
      {{ message }}
    </p>
  {% endif %}

  {% if action_url and action_text %}
    <div class="cg-empty-state__actions cg-animate-fadeInUp cg-delay-2">
      <a href="{{ action_url }}" class="cg-btn cg-btn--primary">
        {% if action_icon %}
          <span class="cg-btn__icon">
            {{ icons[action_icon]|default('')|raw }}
          </span>
        {% endif %}
        {{ action_text }}
      </a>
    </div>
  {% endif %}

  {# Optional secondary actions slot #}
  {% if secondary_actions is defined %}
    <div class="cg-empty-state__secondary-actions cg-animate-fadeInUp cg-delay-3">
      {{ secondary_actions }}
    </div>
  {% endif %}
</div>
