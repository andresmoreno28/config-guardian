{#
/**
 * @file
 * Empty state component for Config Guardian.
 *
 * Displays a friendly message when no content is available.
 * Includes an icon, title, description, and optional action button.
 *
 * Available variables:
 * - icon: The icon type to display. Options: 'search', 'snapshot', 'config',
 *         'graph', 'error', 'success', 'warning', 'empty'. Default: 'empty'
 * - title: The main heading text. Required.
 * - message: Descriptive text explaining the empty state. Optional.
 * - action_url: URL for the action button. Optional.
 * - action_text: Text for the action button. Optional.
 * - action_icon: Icon for the action button. Optional.
 * - size: Size variant ('small', 'medium', 'large'). Default: 'medium'
 * - class: Additional CSS classes.
 *
 * Usage examples:
 * @code
 * {% include '@config_guardian/components/empty-state.html.twig' with {
 *   icon: 'snapshot',
 *   title: 'No snapshots yet'|t,
 *   message: 'Create your first snapshot to start tracking configuration changes.'|t,
 *   action_url: url('config_guardian.snapshot_add'),
 *   action_text: 'Create Snapshot'|t
 * } %}
 * @endcode
 */
#}

{% set icon_type = icon|default('empty') %}
{% set size_class = size|default('medium') %}
{% set extra_class = class|default('') %}

{% set classes = [
  'cg-empty-state',
  'cg-empty-state--' ~ size_class,
  extra_class
]|filter(v => v)|join(' ') %}

